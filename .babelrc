{
  "presets": [
    "es2015",
    "react"
  ],
  "plugins": [
    "syntax-dynamic-import",  // import()
    "transform-decorators-legacy",  // decorator
    "transform-class-properties",  // 类属性简便写法
    "transform-object-rest-spread",  // 支持... rest spread 运算符
    "transform-export-extensions",  // 支持export from语法
    "react-hot-loader/babel",  // 添加react HMR
    [
      "import",
      {
        "libraryName": "antd",
        "libraryDirectory": "es",
        "style": true  // 导入css源文件并在编译期间完成优化。可以显着减少包的大小，这取决于您对库的使用情况。
      }
    ]
  ]
}